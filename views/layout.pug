head
    block head
      title="QHistory"
      link(rel='stylesheet' href='/stylesheets/reset.css')
body
  div(class='headerOne')
    div(class='titleContainer')
      a(href='/' class='title')
        h2(class='title') QHistory
    div(class='openingLogOut')
      div(class='searchKeyword')
        form(method='post' action='/search/keyword')
          div(class="searchDiv")
            input(type='text' name='searchBar' placeholder='Search QHistory...')
            button(type='submit' class='searchSubmit')
            input(type='hidden' name='_csrf' value=csrfToken)
      if user && user.id
        div(class='viewProfile')
          form(action='/users/userProfile')
            button(type='submit' ) View Profile
        form(method='post' action='/users/logout')
          button(type='submit') Log Out
      else
        div(class='opening')
          a(href='/users/register')
            button(type="button") Register
        div(class='opening')
          a(href='/users/login')
            button(type="button") Login
  block content

  footer
    div(class='footer')
      block footer
