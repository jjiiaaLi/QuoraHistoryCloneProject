extends layout.pug

append head
  script(src="/javascripts/index.js" type="module" defer)

block content
    fieldset(class='newQuestion')
        include utils.pug
        form(method='post' action='/questions' class='askAQcontainer')
            div(class='AAQtextareacontainer')
                label(for='content')
                textarea(name='content', cols='100', rows='10' type='text' class='AAQtextarea' required)= content
            div(class='AAQselectTagDiv')
                label(for='tag' class='AAQtaglabel') Select tags
                select(name='tagIds' multiple)
                    each tag in tags
                        option(name= tag.name value= tag.id )= tag.name
            div(class='AAQsubmitnewQ')
                input(type='hidden' name='_csrf' value= csrfToken)
                button(type='submit') Submit
